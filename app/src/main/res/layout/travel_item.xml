<?xml version="1.0" encoding="utf-8"?><!-- route_item_layout.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">
        <!-- 경로 이름 -->
        <TextView
            android:id="@+id/travel_name"
            android:text="travel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/travel_date"
            android:text="travel_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_name"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:stepSize="1" />

        <!-- 리뷰 -->
        <TextView
            android:id="@+id/travel_companion"
            android:text="travel_companion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_date"
            android:textSize="14sp" />
    </RelativeLayout>
